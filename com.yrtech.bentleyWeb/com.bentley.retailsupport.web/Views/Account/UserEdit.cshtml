@{
    ViewBag.Title = "用户编辑";
}


<div style="display:none">
    <input id="NO" type="hidden" value="{{'NO'|translate}}" />
    <input id="Dealer" type="hidden" value="{{'Dealer'|translate}}" />
</div>

<div id="page-wrapper">
    <!--BEGIN CONTENT-->
    <div class="page-content">
        <div id="tab-general">
            <div class="row mbl">
                <div class="col-lg-12">
                    <div class="col-md-12">
                        <div id="area-chart-spline" style="width: 100%; height: 300px; display: none;">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="main-content">
                        <div class="container-fluid">
                            <div class="row-fluid">
                                <div class="span12">
                                    <!-- BEGIN THEME CUSTOMIZER-->
                                    <div id="theme-change" class="hidden-phone" style="display: none;">
                                        <i class="icon-cogs"></i>
                                        <span class="settings">
                                            <span class="text">Theme:</span>
                                            <span class="colors">
                                                <span class="color-default" data-style="default"></span>
                                                <span class="color-gray" data-style="gray"></span>
                                                <span class="color-purple" data-style="purple"></span>
                                                <span class="color-navy-blue" data-style="navy-blue"></span>
                                            </span>
                                        </span>
                                    </div>
                                    <h3 class="page-title">
                                        <span translate>UserEdit</span>
                                        <small translate>ModeUser</small>
                                    </h3>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <!-- BEGIN SAMPLE FORM widget-->
                                    <div class="widget">
                                        <div class="widget-title">
                                            <h4><i class="icon-reorder"></i><span translate>Edit</span></h4>
                                            <span class="tools">
                                                <a href="javascript:;" class="icon-chevron-down" onclick="ShowDiv()"></a>
                                            </span>
                                        </div>
                                        <div class="widget-body form" style="display:block;">

                                            <form class="form-horizontal" id="userCreate">
                                                <input id="UserId" name="UserId" type="hidden" value="@ViewBag.UserId" />
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>UserName</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="AccountName" name="AccountName" style="width:100%;" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>EnName</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="AccountNameEn" name="AccountNameEn" style="width:100%;" type="text" value="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>Account</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="AccountId" name="AccountId" style="width:100%;" readonly />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>Password</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="Password" name="Password" style="width:100%;" type="password" value="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>Email</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="Email" maxlength="255" name="Email" style="width:100%;" type="text" value="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>ContactWay</span>:</label>
                                                            <div class="col-md-6">
                                                                <input class="form-control" id="TelNO" name="TelNO" style="width:100%;" type="text" value="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>Role</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-3">
                                                                <select name="RoleTypeCode" class="selectpicker">
                                                                    <option value=""></option>
                                                                    <option value="SYSADMIN">管理员</option>
                                                                    <option value="AREA">区域经理</option>
                                                                    <option value="BMC">市场活动</option>
                                                                    <option value="SHOP">经销商</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>Dealer</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-3">
                                                                <select id="ShopId" name="ShopId" class="selectpicker"></select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3"><span translate>AreaName</span><span class="required" style="color:red">*</span>:</label>
                                                            <div class="col-md-3">
                                                                <select id="AreaId" name="AreaId" class="selectpicker"></select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <a type="button" class="btn btn-success " onclick="Create();" translate>Save</a>
                                                    <a class="btn btn-dark" href="/Home/ManageUsers" translate>Back</a>
                                                </div>
                                            </form>
                                            <!-- END FORM-->
                                        </div>
                                    </div>
                                    <!-- END SAMPLE FORM widget-->
                                </div>
                            </div>
                            <!-- END ADVANCED TABLE widget-->
                            <!-- END PAGE CONTENT-->
                        </div>
                    </div>
                    <!--END CONTENT-->
                </div>
            </div>
        </div>
    </div>
    <!--END CONTENT-->
</div>

@section scripts{
    <script src="~/Scripts/api/common.js"></script>
    <script src="~/Scripts/curtom/UserCreate.js"></script>
    <script src="~/Scripts/crypto-js.js"></script>
    <script src="~/Scripts/curtom/DESUtil.js"></script>
    <script>
        $("#nav_user").addClass("active");

        var id = '@ViewBag.UserId';
        $(function () {
            loadShops().forEach(function (item) {
                var shopName = localStorage.language == 'en' ? item.ShopNameEn : item.ShopName;
                $("#ShopId").append($("<option>").val(item.ShopId).text(shopName));
            });
            //设置同步调用 必须先绑定下拉列表数据再查询市场活动信息
            $.ajaxSetup({
                async: false
            });
            $.commonGet("Master/AreaSearch", {
                areaId: '',
                areaName: '',
                areaNameEn: ''
            }, function (data) {
                if (data && data.length > 0) {
                    data.forEach(function (item) {
                        var areaName = localStorage.language == 'en' ? item.AreaNameEn : item.AreaName;
                        $('#AreaId').append($("<option>").val(item.AreaId).text(areaName));
                    });
                }
            });
            $.ajaxSetup({
                async: true
            });

            if (id) {
                $.commonGet("Master/UserInfoSearch", {
                    userId: id,
                    accountId: '',
                    accountName: '',
                    shopCode: '',
                    shopName: '',
                    email: ''
                }, function (data) {
                    if (data && data.length > 0) {
                        $('#userCreate').setForm(data[0]);
                        $("select").selectpicker("refresh");
                    }
                });
            }

        });
        function ShowDiv() {
            if ($('.widget-body.form')[0].style.display == 'none') {
                $('.widget-body.form')[0].style.display = 'block';
            }
            else {
                $('.widget-body.form')[0].style.display = 'none';
            }
        }

        function Create() {
            var data = $('#userCreate').data('bootstrapValidator');
            if (data) {
                // 修复记忆的组件不验证
                data.validate();

                if (!data.isValid()) {
                    return false;
                }
                else {
                    try {
                        var oMyForm = $('#userCreate').serializeObject();
                        oMyForm.Password = DESEncrypt(oMyForm.Password);
                        if (!oMyForm.InUserId) {
                            oMyForm.InUserId = $("#G_UserId").val();
                            oMyForm.ModifyUserId = $("#G_UserId").val();
                        }
                        console.log(oMyForm)
                        $.commonPost('Master/UserInfoSave', oMyForm, function (res) {
                            window.location.href = "/Home/ManageUsers";
                        })
                    }
                    catch (e) {
                        $('#message').text('请更新您的浏览器至IE10或者更高版本');
                    }
                }
            }

        }
    </script>
}